{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "SecretKey": "YourSuperSecretKeyThatIsAtLeast32CharactersLong!",
    "Issuer": "UrlShortener",
    "Audience": "UrlShortener",
    "ExpirationMinutes": 60
  },
  "Services": {
    "UserService": {
      "Endpoints": [
        {
          "Host": "localhost",
          "Port": "5001",
          "Scheme": "http",
          "HealthCheckEndpoint": "/health"
        }
      ]
    },
    "UrlShorteningService": {
      "Endpoints": [
        {
          "Host": "localhost",
          "Port": "5002",
          "Scheme": "http",
          "HealthCheckEndpoint": "/health"
        }
      ]
    },
    "AnalyticsService": {
      "Endpoints": [
        {
          "Host": "localhost",
          "Port": "5003",
          "Scheme": "http",
          "HealthCheckEndpoint": "/health"
        }
      ]
    }
  },
  "Routes": [
    {
      "Path": "/api/auth",
      "ServiceName": "UserService",
      "TargetPath": "/api/auth",
      "RequireAuth": false,
      "RateLimitPerMinute": 10
    },
    {
      "Path": "/api/users",
      "ServiceName": "UserService",
      "TargetPath": "/api/users",
      "RequireAuth": true,
      "RateLimitPerMinute": 60
    },
    {
      "Path": "/api/url",
      "ServiceName": "UrlShorteningService",
      "TargetPath": "/api/url",
      "RequireAuth": false,
      "RateLimitPerMinute": 100
    },
    {
      "Path": "/api/analytics",
      "ServiceName": "AnalyticsService",
      "TargetPath": "/api/analytics",
      "RequireAuth": true,
      "RateLimitPerMinute": 60
    },
    {
      "Path": "/r",
      "ServiceName": "UrlShorteningService",
      "TargetPath": "/r",
      "RequireAuth": false,
      "RateLimitPerMinute": 1000
    }
  ],
  "RateLimit": {
    "DefaultLimitPerMinute": 100,
    "WindowSizeMinutes": 1
  }
}